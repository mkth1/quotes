<div class="formwrapper">
	<h4>Add Quotes:</h4>
	
	<%= form_for @quote ,:html => {:class => "form-horizontal"} do |f| %>
		
		<div class="form-group">
			<%= f.label(:Author, :class => "col-sm-2 control-label") %>
			<div class="col-sm-7">
				<%= f.text_field(:author, :class => "form-control", :placeholder => "Milton Berle")%>
			</div>
		</div>

		<div class="form-group">
			<%= f.label(:Quotes, :class => "col-sm-2 control-label") %>
			<div class="col-sm-10">
				<%= f.text_area(:text, :class => "form-control", :placeholder => "If opportunity does not knock, build a door")%>
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<%= f.submit(:class => "btn btn-primary") %>
			</div>
		</div>
	<% end %>


</div>
